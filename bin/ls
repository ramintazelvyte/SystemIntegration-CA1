#!/bin/bash
# ls command


if [ $# -eq 0 ]; then
	echo `/bin/ls`
elif [ $# -eq 2 ]; then 
	if [ "$1" = "-id" | $2 -eq $HOME ]; then
		echo `/bin/ls $1 $2` 
	fi
elif [ $# -eq 3 ]; then
	if [ "$1" = "-i" ] && [ "$2" = "-d" ] && [ "$3" = "$HOME" ]; then
		echo `/bin/ls $1 $2 $3`
	fi
else
	echo "Command is not recognized."
	echo "Please refer to help page using commands 'help' or '?'."
fi 
